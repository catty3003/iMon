<div class="bs-docs-section">
  <div class="row">
    <div class="col-md-12">
      <h1>Kreativismen</h1>
      
      <div class="row">
        <% @creativitycards.order(created_at: :desc).each do |c| %>
        <div class="col-md-4">
          <div class="thumbnail" >                          
            <h3><%= link_to c.title, creativitycard_path(c) %></h3>
            <p style="white-space: pre-line;"><%= c.suggestion %></p>
            <p style="white-space: pre-line;"><strong>Beispiel: </strong><%= c.example %></p>
            <% if current_user.admin == true %>
              <%= link_to 'Show', c, class: "btn btn-success btn-sm" %> 
              <%= link_to 'Edit', edit_creativitycard_path(c), class: "btn btn-warning btn-sm" %> 
              <%= link_to 'Destroy', c, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
            <% else %>
            <% end %>
          </div>                  
        </div>
        <% end %> 
      </div> 

    <%= link_to 'New Creativitycard', new_creativitycard_path, class: "btn btn-primary btn-sm" %>
    </div>
  </div>
</div>
