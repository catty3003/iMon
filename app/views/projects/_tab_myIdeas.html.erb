<div class="row">
  <% @userideas.order(created_at: :desc).each do |idea| %>
    <% if idea.user_id == current_user.id %>
      <div class="col-md-4">
        <div class="thumbnail", id="thumb">                                           
          <p><%= idea.post %></p>                                      
        </div>
      </div> 
      <% else %>                 
    <% end %>
  <% end %>
</div>