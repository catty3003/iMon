<div class="row">
  <% @userideas.order(created_at: :desc).each do |idea| %>
    <% if idea.user_id == current_user.id %>
      <div class="panel panel-success">             
        <div class="panel-body">                                            
          <p><%= idea.post %></p>                                      
        </div>
      </div> 
      <% else %>                 
    <% end %>
  <% end %>
</div>