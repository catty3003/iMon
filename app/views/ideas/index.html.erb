<p id="notice"><%= notice %></p>

<h1>Listing Ideas</h1>
<%= link_to 'Export XLS', url_for(:format => 'xls'), class: "btn btn-primary btn-sm" %> 
<%= link_to 'Export CSV', url_for(:format => 'csv'), class: "btn btn-primary btn-sm" %>

</br>
</br>

<table class="table table-striped table-bordered table-hover ">
  <thead>
    <tr>
      <th>Post</th>
      <th>Project</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ideas.each do |idea| %>
      <tr>
        <td><%= idea.post %></td>
        <td><%= idea.project_id %></td>
        <td><%= idea.user_id %></td>
        <td><%= link_to 'Show', idea %></td>
        <td><%= link_to 'Edit', edit_idea_path(idea) %></td>
        <td><%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

